<form method="post" action="{{ path('comment_delete', {'id': comment.id}) }}" onsubmit="return confirm('Etes-vous sÃ»re de vouloir effacer le commentaire?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
    {% if app.user is not same as(comment.user) %}
        <button class="btn btn-danger btn-sm" title="Supprimer le commentaire" style="padding: 0 5px">Supprimer le commentaire.</button>
    {% else %}
        <button class="btn btn-danger btn-sm" title="Supprimer votre commentaire" style="padding: 0 5px">Supprimer votre commentaire.</button>
    {% endif %}
</form>
