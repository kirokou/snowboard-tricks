{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}-Home{% endblock %}

{% block body %}
    {% include 'home/caroussel.html.twig' %}
    <!--Main layout-->
    <main>
        <div class="container">
            <section class="mt-5 wow fadeIn">
                <h2 class="text-center mb-5">Listes des figures</h2>
                <div class="row">
                    {% for trick in tricks %}
                        <!--Grid column-->
                        <article class="col-lg-4 col-md-12 mb-4">
                            <!--Card-->
                            <div class="card">
                                <!--Card image-->
                                <div class="view overlay">
                                    {% if trick.images %}
                                        <img src="{{ asset('uploads/'~ trick.images[0].completeUrl) }}" alt="Image de prÃ©sentation" class="card-img-top">
                                    {% else %}
                                         <img src="http://placehold.it/300x200" class="card-img-top" alt="placehold.it">
                                    {% endif %}
                                    <a href="{{ path('trick_show', {'slug': trick.slug}) }}">
                                        <div class="mask rgba-white-slight"></div>
                                    </a>
                                </div>
                                <!--Card content-->
                                <div class="card-body">
                                    <!--Title-->
                                    <h4 class="card-title">{{ trick.title }}</h4>
                                    <!--Text-->
                                    <p class="card-text">{{ trick.description | slice(0, 100) }}...</p>
                                    <a href="{{ path('trick_show', {'slug': trick.slug}) }}" class="btn btn-indigo">Voir la figure</a>
                                    <a href="{{ path('trick_edit', {'slug': trick.slug}) }}" class="btn btn-info"><i class="fa fa-pen"></i></a>
                                    {{ include('trick/_delete_form.html.twig') }}
                                </div>
                            </div>
                            <!--/.Card-->
                        </article>
                        <!--Grid column-->

                    {% endfor %}
                </div>
                <nav aria-label="Page navigation example" class="d-flex justify-content-center">
                    <ul class="pagination pg-blue">
                        <li class="page-item disabled">
                            <a class="page-link" tabindex="-1">Previous</a>
                        </li>
                        <li class="page-item"><a class="page-link">1</a></li>
                        <li class="page-item active">
                            <a class="page-link">2 <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="page-item"><a class="page-link">3</a></li>
                        <li class="page-item">
                            <a class="page-link">Next</a>
                        </li>
                    </ul>
                </nav>
            </section>
        </div>
    </main>
    <!--Main layout-->
{% endblock %}
